{
  "use_smartcase_search": true,
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "inlay_hints": {
    "enabled": false,
    "toggle_on_modifiers_press": {
      "alt": true
    }
  },
  "toolbar": {
    "code_actions": false
  },
  "minimap": {
    "show": "auto"
  },
  "relative_line_numbers": true,
  "auto_signature_help": true,
  "helix_mode": false,
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "lmstudio",
      "model": "mistralai/devstral-small-2507"
    }
  },
  "vim_mode": true,
  "theme": "Gruvbox Dark",
  "buffer_font_size": 13,
  "ui_font_size": 13
}